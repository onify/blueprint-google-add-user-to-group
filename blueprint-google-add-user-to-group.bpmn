      <bpmn:script>next(null, {
  group: {
    groupKey: '03j2qqm31a6a03u'
  },
  user: {
    email: 'robert@onify.co',
    role: 'OWNER',
    type: 'USER',
    delivery_settings: 'ALL_MAIL'
  }
});</bpmn:script>
